<Page x:Class="MVVM_Refregator.View.StepOfSettingFoodLimitDate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVVM_Refregator.View"
      xmlns:vm="clr-namespace:MVVM_Refregator.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StepOfSettingFoodLimitDate">

    <Page.DataContext>
        <vm:StepOfFoodLimitDateViewModel />
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--<StackPanel Margin="10" Grid.Column="1">
            <Button Margin="10" Content="賞味期限設定ページです"/>
            <Calendar />
        </StackPanel>-->

        <DatePicker Grid.Column="1" Margin="20" BorderBrush="Transparent" SelectedDate="{Binding LimitDate.Value}" />
    </Grid>
</Page>
