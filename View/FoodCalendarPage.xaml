<Page x:Class="MVVM_Refregator.View.FoodCalendarPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:MVVM_Refregator.ViewModel"
      mc:Ignorable="d"
        Title="CalendarWindow" Height="550" Width="750">
    <Page.DataContext>
        <vm:FoodShelfViewModel x:Name="foodShelf"/>
    </Page.DataContext>
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Calendar Margin="5" >
                <Calendar.Background>White</Calendar.Background>
                <Calendar.CalendarDayButtonStyle>
                    <Style TargetType="{x:Type CalendarDayButton}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type CalendarDayButton}">
                                    <Grid Background="Azure" Margin="2">
                                        <Border BorderThickness="2" BorderBrush="Turquoise">
                                            <StackPanel MinHeight="60" MinWidth="60">
                                                <TextBlock Text="{Binding StringFormat={}{0:dd}}" Margin="5"/>
                                                <ItemsControl DataContextChanged="ItemsControl_DataContextChanged" Initialized="ItemsControl_Initialized">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel MaxHeight="55" MaxWidth="60" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate DataType="{x:Type vm:FoodViewModel}">
                                                            <Image Source="{Binding Image.Value, UpdateSourceTrigger=PropertyChanged}" Height="20" Stretch="Uniform" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Calendar.CalendarDayButtonStyle>
            </Calendar>

            <DataGrid Margin="5" VerticalAlignment="Top" MaxHeight="500" ItemsSource="{Binding Foods}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id.Value}" MaxWidth="50" MinWidth="30"/>
                    <DataGridTextColumn Header="名前" Binding="{Binding Name.Value}" MaxWidth="50"/>
                    <DataGridTextColumn Header="期限日" Binding="{Binding LimitDate.Value, StringFormat={}{00:yyyy/MM/dd(ddd)}}"/>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</Page>
